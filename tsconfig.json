{
	"compilerOptions": {
	  "target": "es2022",
	  "module": "commonjs",
	  "resolveJsonModule": true,
	  "lib": ["esnext"],
	  "sourceMap": true,
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "forceConsistentCasingInFileNames": true,
	  "skipLibCheck": true
	},
	"exclude": ["node_modules", "src/test"],
	"ts-node": {
	  "esm": true
	}
  }
  